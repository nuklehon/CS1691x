-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :id => "ratings_form", :method => :get do
  %table
    %tr
      %td Include:
      - @all_ratings.each do |rating, checked|
        %td= rating
        %td= check_box_tag "ratings[#{rating}]", true, checked
      = hidden_field_tag :sorting, @sorting  
      %td= submit_tag 'Refresh', :id => "ratings_submit"

%table#movies
  %thead
    %tr
      %th{:class => ("hilite" if @sorting == 'title')}= link_to "Movie Title", movies_path({:sorting => 'title', :ratings => @all_ratings}), :id => "title_header"
      %th Rating
      %th{:class => ("hilite" if @sorting == 'release_date')}= link_to "Release Date", movies_path({:sorting => 'release_date', :ratings => @all_ratings}), :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path